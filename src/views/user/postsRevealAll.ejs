<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/navbar') %>
    <div class="wrapper">
      <h2>Listando todas postagens</h2>
      <hr/>
      <% if (posts.length> 0) { %>
        <% posts.forEach((post)=> { %>
          <div class="post">
            <small><%= post.date %></small>
            <div class="header">
              <h3><%= post.title %></h3>
            </div>
            
            <p class="description"><%= post.description %></p>
            <hr>
            <div class="footer-post">
              <p >Categoria: <%= post.category.name_category %></p>

             <%- include('../partials/footerPost', { post })%>
            </div>
          </div>
        <% }); %>
      <%} else { %>
        <div class="post">
          <p>Não há postagens cadastradas</p>
        </div>
      <%} %>
    </div>
  </body>
  <%- include('../partials/footer') %>
</html>
